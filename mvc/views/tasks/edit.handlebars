<h1>Editando Tasks</h1>

<br />
<br />

<form action='/tasks/edit' method='post'>
  <label for='title'>Título: </label>
  <input type='text' name='title' value={{task.title}} />
  <br />
  <br />
  <label for='description'>Descrição: </label>
  <input type='text' name='description' value={{task.title}} />
  <br />
  <br />
  <label for='description'>Realizada: </label>
  <input type='checkbox' name='done' {{#if task.done}}
    checked
  {{/if}} />
  <br />
  <br />
  <input type="hidden" name="id" value={{task.id}} />
  <input type='submit' value='Editar task' />
</form>